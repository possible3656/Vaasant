<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOneNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/assignmentHomework"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/assignment"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginRight="15dp" />





            <TextView
                android:id="@+id/titleHomework"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New assignment: Make this layout fast"
                android:layout_toEndOf="@id/assignmentHomework"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:maxLength="50"
                android:layout_toRightOf="@id/assignmentHomework" />


            <TextView
                android:id="@+id/subjectHomework"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mordern UI"
                android:layout_toEndOf="@id/assignmentHomework"
                android:textColor="@android:color/secondary_text_light"
                android:layout_below="@id/titleHomework"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:maxLength="30"
                android:layout_toRightOf="@id/assignmentHomework" />

            <TextView
                android:id="@+id/dateHomework"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="28 Jan"
                android:layout_toEndOf="@id/assignmentHomework"
                android:textColor="@android:color/secondary_text_light"
                android:layout_below="@id/subjectHomework"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:maxLength="15"
                android:layout_toRightOf="@id/assignmentHomework" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>






</RelativeLayout>